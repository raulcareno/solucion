<zk>
	<window id="updateMyEntry" width="350px" title="Actualización de Actividad" border="normal" mode="popup" apply="org.zkoss.zknewsfeed.controllers.EventUpdateController" visible="false">
		<grid>
			<rows>
                <row>
					Desde: <span><datebox id="inicio"  />
                    <timebox id="tinicio"/></span>
				</row>
                
                <row>
					Hasta: 
                    <span>
                        <datebox id="fina"  />
                        <timebox id="tfina" />
                    </span>
				</row>
				<row>
					Actividad: <textbox id="tbText"  />
				</row>
				<row>
					Tipo: <combobox id="cmbType">
						 
						<comboitem label="Academica" style="background:#FF6F6F" />
						<comboitem label="Reunión"  style="background:#9B9BFF" />
                        <comboitem label="Recoradorio" style="background:#00E874"  />
                        <comboitem label="Otro" style="background:#FF9900"  />
					  </combobox>
				</row>
				<row>
					
					<button id="btnUpdateNews" label="Actualizar" width="36px" height="24px"/>
					<span>
                    <button id="btnDeleteNews" label="Borrar" width="36px" height="24px"/>

					<button id="btnCancel" label="Cancelar" width="36px" height="24px" />
                    </span>
				</row>	
			</rows>
		</grid>
	</window>
</zk>