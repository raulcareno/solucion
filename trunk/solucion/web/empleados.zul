<zk  xmlns="http://www.zkoss.org/2005/zul">
<?script type="text/javascript" src="/js/jquery.maskedinput.js"?>
<?script type="text/javascript" src="/js/jquery.min.js"?>
<?script type="text/javascript" src="/js/masks.js"?>
