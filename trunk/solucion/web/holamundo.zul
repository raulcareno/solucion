        Checkbox cheGuardar = new Checkbox("");
        cheGuardar.setChecked(((Accesos)data).getGuardar());
        Checkbox cheActualizar = new Checkbox("");
        cheActualizar.setChecked(((Accesos)data).getActualizar());
        Checkbox cheEliminar = new Checkbox("");
        cheEliminar.setChecked(((Accesos)data).getEliminar());
        new Label(""+((Accesos)data).getCodigoacc()).setParent(row);
        new Label(""+((Accesos)data).getModulo()).setParent(row);
        cheIngresar.setParent(row);
        cheGuardar.setParent(row);
        cheActualizar.setParent(row);
        cheEliminar.setParent(row);
      }
    }
    ListModel model = new SimpleListModel(perfiles.toArray());
    RowRenderer rowRenderer = new MyRowRenderer();
  </zscript>

